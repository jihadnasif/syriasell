# Fixed Podfile for Codemagic / Bitrise / GitHub Actions

platform :ios, '13.0'

use_frameworks!
use_modular_headers!

ENV['COCOAPODS_DISABLE_STATS'] = 'true'

flutter_application_path = File.expand_path('.', __dir__)  # يشير لمجلد المشروع نفسه
podhelper_path = File.join(flutter_application_path, 'Flutter', 'podhelper.rb')

target 'Runner' do
  if File.exist?(podhelper_path)
    require podhelper_path
    flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  else
    puts "⚠️ podhelper.rb not found, skipping Flutter pod installation"
  end
end
