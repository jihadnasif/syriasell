platform :ios, '13.0'

ENV['COCOAPODS_DISABLE_STATS'] = 'true'

use_frameworks!
use_modular_headers!

flutter_application_path = File.expand_path('../flutter', __dir__)
require File.expand_path(File.join(flutter_application_path, '.ios', 'Flutter', 'podhelper.rb'))

target 'Runner' do
  flutter_ios_podfile_setup
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
  end
end
